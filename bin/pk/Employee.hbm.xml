<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="pk.Employee" table="EMPLOYEE">
       <id name="empCode" column="EMPCODE" type="integer">
         <generator class="assigned"></generator>
       </id>
       <property name="name" column="NAME" type="string"></property>
       <property name="position" column="DESIGNATION" type="string"></property>
       <property name="department" column="DEPARTMENT" type="string"></property>
       <property name="joiningDate" column="JOININGDATE" type="date"></property>
       <property name="currentCtc" column="CTC" type="double"></property>
    </class>
</hibernate-mapping>
